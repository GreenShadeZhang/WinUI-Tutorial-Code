<Window
    x:Class="MediaPipe.GestureClassification.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MediaPipe.GestureClassification"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <Button x:Name="StartButton" Click="StartButton_Click">开始按钮</Button>
        <Image x:Name="VideoFrame" />
        <TextBlock x:Name="HandResult" FontSize="72" />
    </StackPanel>
</Window>
